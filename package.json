{
  "name": "alloy",
  "email": "ic3y808@users.noreply.github.com",
  "url": "https://github.com/ic3y808/Alloy",
  "version": "1.0.0",
  "description": "A crossplatform media player, api and web UI",
  "author": "Jesse Nelson",
  "license": "ISC",
  "main": "alloy/main.js",
  "scripts": {
    "start": "cross-env MODE=prod electron .",
    "postinstall": "electron-builder install-app-deps && cd alloyweb && npm install",
    "rebuild": "electron-builder install-app-deps",
    "build_styles": "gulp scss:alloydb",
    "build_fonts": "icon-font-generator ./common/icons/*.svg -n alloyicons --normalize --html false -j false -o alloyweb/styles/fonts",
    "build_web": "npm run build_fonts & cd alloyweb && cross-env MODE=prod webpack --mode production .",
    "build": "npm run build_styles & npm run build_web & npm run dist",
    "build_dev": "npm run build_styles & npm run build_web",
    "build_dev_pack": "npm run build_styles & npm run build_web & npm run pack",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "nyc ./node_modules/.bin/mocha --opts test/mocha.opts --reporter mocha-junit-reporter --reporter-options mochaFile=TEST-RESULTS.xml && cross-env CODACY_PROJECT_TOKEN=0c34166541df4c81896f11278c081c60 codacy-coverage < ./coverage/lcov.info"
  },
  "nyc": {
    "all": true,
    "include": [
      "alloy/**/*.js",
      "common/**/*.js",
      "migrations/**/*.js",
      "alloy/**/*.js",
      "alloyapi/**.*.js",
      "alloyweb/**.*.js"
    ],
    "exclude": [
      "**/test/**",
      "**/*.spec.js"
    ],
    "extends": "@istanbuljs/nyc-config-babel",
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "cobertura",
      "text",
      "html"
    ],
    "reporter-options": {
      "mochaFile": "TEST-RESULTS.xml"
    },
    "sourceMap": false,
    "instrument": true
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul",
          [
            "transform-runtime",
            {
              "regenerator": true
            }
          ]
        ]
      }
    }
  },
  "build": {
    "buildDependenciesFromSource": false,
    "npmRebuild": true,
    "asar": true,
    "compression": "store",
    "directories": {
      "buildResources": "./common"
    },
    "files": [
      "!.vscode/*",
      "!alloydroid/",
      "alloyapi/**/*",
      "!alloycast/",
      "alloy/**/*",
      "alloyweb/components/",
      "alloyweb/content/",
      "alloyweb/directives/",
      "alloyweb/dist/",
      "alloyweb/routes/",
      "alloyweb/services/",
      "alloyweb/views/",
      "common/**/*",
      "!common/media",
      "!common/art",
      "migrations/*.js",
      "!test/*",
      "!.codacy.yml",
      "!.eslintrc.json",
      "!.gitignore",
      "!.jshintrc",
      "!.nycrc.json",
      "!.nycrc.json",
      "!alloy.keystore",
      "!azure-pipelines-dev.yml",
      "!azure-pipelines-test.yml",
      "!azure-pipelines.yml",
      "!CONTRIBUTING.md",
      "env.js",
      "!FEATURE_TRACKING.md",
      "!gulpfile.js",
      "LICENSE",
      "main.js",
      "package.json",
      "README.md",
      "!version.ps1",
      {
        "from": "./",
        "to": "./",
        "filter": [
          "**/*.env"
        ]
      },
      "!node_modules/ffmpeg-static/bin",
      "!node_modules/ffprobe-static/bin",
      "node_modules/ffmpeg-static/bin/${os}/${arch}/ffmpeg",
      "node_modules/ffmpeg-static/index.js",
      "node_modules/ffmpeg-static/package.json",
      "node_modules/ffprobe-static/bin/${os}/${arch}/ffmpeg",
      "node_modules/ffprobe-static/index.js",
      "node_modules/ffprobe-static/package.json"
    ],
    "electronVersion": "4.1.5",
    "electronDownload": {
      "version": "4.1.5"
    },
    "appId": "com.d3bug.alloy",
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb",
      "category": "Audio",
      "desktop": "linux.desktop",
      "maintainer": "Jesse Nelson"
    },
    "mac": {
      "category": "public.app-category.productivity"
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@babel/runtime": "^7.1.2",
    "angular": "^1.6.6",
    "angular-cookies": "^1.7.8",
    "better-queue": "^3.8.10",
    "better-sqlite3": "^5.4.0",
    "body-parser": "^1.15.0",
    "bootstrap": "^3.4.1",
    "bootstrap-material-design": "^4.1.1",
    "bootstrap-select": "^1.13.10",
    "co": "^4.6.0",
    "compression": "^1.7.4",
    "cron": "^1.7.1",
    "crypto-js": "^3.1.9-1",
    "debug": "^4.1.1",
    "del": "^4.1.1",
    "dotenv": "^8.0.0",
    "drivelist": "^8.0.6",
    "escape-string-regexp": "^2.0.0",
    "express": "^4.16.4",
    "express-cache-controller": "^1.1.0",
    "express-fileupload": "^1.1.4",
    "express-swagger-generator": "^1.1.14",
    "ffmpeg-static": "^2.5.0",
    "ffprobe-static": "^3.0.0",
    "file-type": "^11.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^8.0.1",
    "image-js": "^0.21.7",
    "jade": "^1.11.0",
    "jimp": "^0.6.4",
    "jquery": "^3.4.1",
    "js-md5": "^0.7.3",
    "klaw-sync": "^6.0.0",
    "lodash": "^4.17.13",
    "map": "^1.0.1",
    "moment": "^2.24.0",
    "nat-upnp": "^1.1.1",
    "node-watch": "^0.6.2",
    "popper.js": "^1.15.0",
    "screenres": "^2.0.1",
    "serve-favicon": "^2.5.0",
    "shelljs": "^0.8.3",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "sqlite3": "^4.0.8",
    "strtok3": "^2.3.0",
    "three": "^0.83.0",
    "xml2js": "^0.4.19",
    "xml2json": "^0.11.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-transform-arrow-functions": "^7.0.0",
    "@babel/plugin-transform-classes": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "@istanbuljs/nyc-config-babel": "^2.1.1",
    "@types/mocha": "^5.2.7",
    "babel-loader": "^8.0.4",
    "babel-plugin-angularjs-annotate": "^0.9.0",
    "babel-plugin-istanbul": "^5.2.0",
    "babel-polyfill": "^6.26.0",
    "brotli-webpack-plugin": "^1.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "clean-webpack-plugin": "^0.1.17",
    "cli-source-preview": "^1.1.0",
    "codacy-coverage": "^3.4.0",
    "compression-webpack-plugin": "^2.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.2.0",
    "dart-sass": "^1.20.1",
    "electron": "^4.1.5",
    "electron-builder": "^21.2.0",
    "electron-chromedriver": "^4.0.0",
    "exports-loader": "^0.7.0",
    "file-loader": "^4.2.0",
    "grunt": "^1.0.4",
    "grunt-babel": "^8.0.0",
    "grunt-contrib-sass": "^1.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-sass": "^3.0.2",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^2.30.1",
    "icon-font-generator": "^2.1.10",
    "image-webpack-loader": "^5.0.0",
    "imports-loader": "^0.8.0",
    "jshint": "^2.10.2",
    "less": "~3.9.0",
    "less-loader": "^5.0.0",
    "livereload": "^0.7.0",
    "lowdb": "^1.0.0",
    "mocha": "^6.2.0",
    "mocha-junit-reporter": "^1.23.1",
    "node-sass": "^4.12.0",
    "nyc": "^14.1.1",
    "postcss-loader": "^3.0.0",
    "precss": "^3.1.2",
    "sass-loader": "^8.0.0",
    "sass-resources-loader": "^2.0.1",
    "spectron": "^6.0.0",
    "stats-webpack-plugin": "^0.7.0",
    "strip-loader": "^0.1.2",
    "style-loader": "^1.0.0",
    "uglify-loader": "^3.0.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^2.1.0",
    "webpack": "^4.39.3",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.3.7",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-livereload-plugin": "^2.2.0"
  }
}
