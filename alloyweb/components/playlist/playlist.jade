section.scrollable.scrollsaver.no-padder.w-f-md(style="padding:0px;")
  div
    .contentSpacing.no-padder
      section.content.padder-top-sm
        .container-fluid
          .general-container
            .col-xs-12.col-lg-3.col-xl-4
              .general-container-header-container
                header.general-container-header
                  .media-object
                    .row
                      .col-xs-12
                        .cover-art.shadow.cover-art--with-auto-height(aria-hidden='true', style='width: auto; height: auto;')
                          .cover-art-image.cover-art-image-loaded(style='background-image: url("{{info.image}}");')
                    .row
                      .mo-info
                        .col-xs-12
                          .mo-info-name(title='{{info.name}}')
                            span(dir='auto') {{info.name}}
                      

                    .mo-meta.ellipsis-one-line
                      
                        p.general-container-header__text-silence.general-container-header__entity-additional-info(ng-if="info.tracks.length > 0", dir='auto') {{info.tracks.length}} {{info.tracks.length > 1 ? "Tracks" : "Track"}} - {{info.size}}
                  .general-container-header__button.general-container-header__button--top
                    button.spotify-btn.btn-block.btn-primary.btn--narrow(ng-click="shuffle()") Play
                  .general-container-header__button.general-container-header__button--top
                    button.spotify-btn.btn-block.btn-primary.btn--narrow(ng-click="shuffle()") Shuffle
                  .general-container-header__button.general-container-header__button--top
                    button.spotify-btn.btn-block.btn-primary.btn--narrow(ng-click="editPlaylist()", title='Edit Playlist') Edit  
                  .general-container-header__button.general-container-header__button--top              
                    button.spotify-btn.btn-block.btn-warning.btn--narrow(ng-click="removePlaylist()", title='Remove Playlist') Remove
                  .general-container-header__button.general-container-header__button--top
                    button.spotify-btn.btn-block.btn-primary.btn--narrow(ng-click="starPlaylist()", title='Save to Your Library') {{info.starred ===  'true' ? "Remove from Starred" : "Add to Starred"}}


                  .general-container-header__button.general-container-header__button--top
                    starratinglabel(album="info.playlist", extrastyles="btn-block")
                  .general-container-header__button.general-container-header__button--top
                    
                    label.switch
                      
                      input(ng-change="cachePlaylistChanged()", ng-model="info.cache", type='checkbox')
                      span.slider.round 
                    span.clear Cache Playlist
    
              
            .col-xs-12.col-lg-9.col-xl-8
              tracklist(data="info.tracks", canaddplaylist="")
