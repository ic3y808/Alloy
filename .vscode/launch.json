{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Alloy",
      "protocol": "inspector",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "cwd": "${workspaceFolder}",
      "timeout": 5000000,
      "env": {
        "MODE": "dev"
      },
      "runtimeArgs": [
        "--remote-debugging-port=9223",
        "."
      ],
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Alloy - Prod",
      "protocol": "inspector",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "cwd": "${workspaceFolder}",
      "timeout": 5000000,
      "env": {
        "MODE": "prod"
      },
      "runtimeArgs": [
        "--remote-debugging-port=9223",
        "."
      ],
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "outputCapture": "std"
    },
    {
      "name": "Alloy: UI",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 5000000,
      "url": "http://localhost:3000/template/alloydb.jade"
    },
    {
      "name": "Alloy: MediaScanner",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 5000000,
      "url": "http://localhost:3000/template/mediascanner.jade"
    },
    {
      "name": "Alloy: APIServer",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 5000000,
      "url": "http://localhost:3000/template/apiServer.jade"
    },
    {
      "name": "Alloy: WebUI",
      "type": "chrome",
      "request": "launch",
      "port": 9222,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Alloy: Android",
      "type": "xamarin",
      "request": "launch",
      "packageName": "com.d3bug.alloy"
    },
    {
      "name": "Alloy: Api-Docs",
      "type": "chrome",
      "request": "launch",
      "port": 9222,
      "url": "http://localhost:4000/api-docs",
      "webRoot": "${workspaceFolder}"
    },   
    {
      "type": "node",
      "request": "launch",
      "name": "Tests - Debug",
      "protocol": "inspector",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "cwd": "${workspaceFolder}",
      "env": {
        "MODE": "test",
        "DEBUG": "music-metadata:parser:ID3",
        "ELECTRON_ENABLE_LOGGING": "true",
        "ELECTRON_ENABLE_STACK_DUMPING": "true",
        "API_ENABLED": "true",
        "UI_ENABLED": "true",
        "API_PORT_TEST": "4000",
        "API_UI_PORT_TEST": "5000",
        "NODE_ENV": "test"
      },
      "runtimeArgs": [
        "--remote-debugging-port=9223",
        "."
      ],
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "outputCapture": "std"
    },
    {
      "name": "Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "test/**/*.js",
        "--bail",
        "--opts",
        "test/mocha.opts"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": {}
    }
   
  ],
  "compounds": [
    {
      "name": "Debug All",
      "configurations": [
        "Alloy",
        "Alloy: UI",
        "Alloy: MediaScanner",
        "Alloy: APIServer",
        "Alloy: WebUI"
      ]
    }
  ]
}